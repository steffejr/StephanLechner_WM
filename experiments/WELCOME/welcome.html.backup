<!DOCTYPE html>
<html>
<head>
    <title>Welcome</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            text-align: center;
            padding: 50px;
            background-color: #f9f9f9;
        }
        h1 {
            color: #333;
        }
        #start-button {
            font-size: 18px;
            padding: 10px 20px;
            margin-top: 20px;
            background: #4CAF50;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }
        #start-button:hover {
            background: #45a049;
        }
    </style>
</head>
<body>
    <h1>Welcome to the Study!</h1>
    <p>Thank you for participating. Please read the instructions carefully.</p>
    <p>Please press F11 on your keyboard to enter fullscreen mode before continuing.</p>
    <button id="start-button">Start Study</button>

    <script>
        console.log("=== WELCOME: Extracting Subject ID ===");
        console.log("Full URL:", window.location.href);

        // Extract subject ID from URL hash parameter
        const hashParams = new URLSearchParams(window.location.hash.substring(1));
        let subjectId = hashParams.get('record_id');

        console.log("Subject ID from URL:", subjectId);

        // If no URL parameter, prompt for it
        if (!subjectId) {
            subjectId = prompt("Please enter your subject ID:");
        }

        // --- Check for Mobile Device ---
        const isMobile = /Mobile|Tablet|iPad|iPhone|Android/.test(navigator.userAgent);
        if (isMobile) {
            document.body.innerHTML = `
                <h1>Mobile Device Detected</h1>
                <p>Please come back to this experiment on a PC or laptop.</p>
                <p>Completing the experiment on mobile devices may jeopardize data quality.</p>
                <p>Your link continues to be valid and no data has been saved.</p>
            `;
            throw new Error("Mobile device detected. Experiment aborted.");
        }

        // Store in JATOS study session data for all experiments to use
        if (subjectId) {
            jatos.studySessionData.subjectId = subjectId;
            jatos.studySessionData.sessionStartTime = new Date().toISOString();
            jatos.setStudySessionData(jatos.studySessionData);
            console.log("Subject ID stored in session:", subjectId);
        } else {
            console.error("No subject ID provided!");
        }

        // --- Collect Browser/Device Data ---
        function collectBrowserData() {
            const browserData = {
                userAgent: navigator.userAgent,
                platform: navigator.platform,
                deviceType: /Mobile|Tablet|iPad|iPhone|Android/.test(navigator.userAgent) ? "Mobile/Tablet" : "Desktop/Laptop",
                screenWidth: window.screen.width,
                screenHeight: window.screen.height,
                screenColorDepth: window.screen.colorDepth,
                screenPixelDepth: window.screen.pixelDepth,
                browserName: navigator.appName,
                browserVersion: navigator.appVersion,
                browserLanguage: navigator.language,
                connectionType: navigator.connection ? navigator.connection.effectiveType : "Unknown",
                connectionDownlink: navigator.connection ? navigator.connection.downlink : "Unknown",
                connectionRTT: navigator.connection ? navigator.connection.rtt : "Unknown",
                timestamp: new Date().toISOString(),
                timezone: Intl.DateTimeFormat().resolvedOptions().timeZone,
                maxTouchPoints: navigator.maxTouchPoints,
                pointerEnabled: window.PointerEvent ? true : false,
                isMouseLikely: navigator.maxTouchPoints === 0,
                isKeyboardLikely: true,
                deviceMemory: navigator.deviceMemory ? navigator.deviceMemory : "Unknown",
                hardwareConcurrency: navigator.hardwareConcurrency ? navigator.hardwareConcurrency : "Unknown"
            };

            estimateRefreshRate(function(refreshRate) {
                browserData.refreshRate = refreshRate;
                console.log("Estimated refresh rate:", refreshRate, "Hz");

                if (!jatos.studySessionData.experimentData) {
                    jatos.studySessionData.experimentData = {};
                }
                jatos.studySessionData.experimentData.welcome = {
                    browserData: browserData,
                    metadata: {
                        subject_id: subjectId,
                        date: new Date().toISOString()
                    }
                };
                jatos.setStudySessionData(jatos.studySessionData);
            });

            console.log("Browser/Device Data:", browserData);
            return browserData;
        }

        function estimateRefreshRate(callback) {
            let lastTime = performance.now();
            let frameCount = 0;
            let totalTime = 0;

            function measure(timestamp) {
                frameCount++;
                totalTime += timestamp - lastTime;
                lastTime = timestamp;

                if (totalTime >= 1000) {
                    const refreshRate = Math.round((frameCount / totalTime) * 1000);
                    callback(refreshRate);
                } else {
                    requestAnimationFrame(measure);
                }
            }

            requestAnimationFrame(measure);
        }

        collectBrowserData();

        // --- Handle Start Button Click ---
        document.getElementById('start-button').addEventListener('click', function(event) {
            const isFullscreenConfirmed = confirm("Have you entered fullscreen mode by pressing F11?");
            if (!isFullscreenConfirmed) {
                event.preventDefault();
                alert("Please press F11 to enter fullscreen mode before continuing.");
                return;
            }
            console.log("Welcome complete, calling continueToNext");
            window.continueToNext();
        });
    </script>
</body>
</html>
    